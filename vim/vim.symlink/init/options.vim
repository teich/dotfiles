" Use text tabs
set guioptions-=e

" Suppress bell
set visualbell

" Do not wrap text
set nowrap

" Show line numbers
set number

" Search with smart casing
set ignorecase
set smartcase

" Read and reload files changed outside Vim
set autoread

" Use zsh shell
set shell=/bin/zsh

" Allow scrolling in non-gui
set mouse=a

